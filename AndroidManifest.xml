<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.abrody.brightness"
          android:versionName="1.0" android:versionCode="3" android:installLocation="preferExternal">

    <application android:icon="@drawable/icon_droid" android:label="@string/app_name">
        <activity android:name=".BrightnessToggle"
                  android:theme="@style/Invisible"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH_LONG_PRESS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>
    <uses-sdk android:targetSdkVersion="8" android:minSdkVersion="8"></uses-sdk>
</manifest> 